#!/usr/bin/env bash
# -*- bash -*-
#
#
set -u -e -o pipefail

if [[ "$@" == "update" ]]; then
  echo "OLD: "
  my_ruby ruby -v
  trash-put /progs/ruby/current
  current="$(ls /progs/ruby | sort | tail -n 1)"
  ln -s /progs/ruby/$current /progs/ruby/current

  echo ""
  echo "NEW: "
  my_ruby ruby -v
  exit 0
fi

export PATH="/progs/ruby/current/bin:$PATH"
"$@"


