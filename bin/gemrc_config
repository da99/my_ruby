#!/usr/bin/env bash
# -*- bash -*-
#
#!/usr/bin/env node
# -*- js   -*-
#
#!/usr/bin/env lua
#
#
set -u -e -o pipefail

if [[ ! -f /etc/gemrc ]]
then
  content="---
:verbose: true
:sources:
- https://rubygems.org
gem: --no-ri --no-rdoc
:update_sources: true"
  echo "$content" > /tmp/gemrc_temp
  sudo mv /tmp/gemrc_temp /etc/gemrc
  echo "Wrote to /etc/gemrc:"
else
  echo "File already exists: /etc/gemrc"
fi

cat /etc/gemrc
