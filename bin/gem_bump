#!/usr/bin/env bash
# -*- bash -*-
#

set -u -e -o pipefail

DIR="$( basename "$(pwd)" )"

if ! git_repo_is_clean
then
  echo -e "\n!!! GIT repo not clean enough.\n" 1>&2
  exit 1
fi

rm -f ./*.gem

bump current
echo -e "=== Bumping...\n"
bump $1 --no-commit --no-bundle
VER=$(cat VERSION)

git add    .
git add    -u
git commit -m   "Bump: $VER"
git tag         "v$VER"
git push origin "v$VER"

gem build ./*.gemspec
echo "=== Done: bumping, commit, push. Done: building gem"
echo "Now: gem push $(echo ./*.gem)"


